
<div class="container">
  <div class="row">
    <h1>Results of the Draft</h1>
    <div class="panel panel-default">
      <div class="panel-heading">

        <%= form_tag ownerships_draft_path, :method => 'get' do %>
          <p> 
            <%= label_tag :round, 'Round' %>
            <%= select_tag(:round, options_for_select(Order.distinct.pluck(:round), params[:round]), prompt: 'all') %>
            <%= label_tag :team, 'Team' %>
            <%= select_tag(:team, options_for_select(Team.pluck(:name, :id), params[:team])) %>
            
            <%= submit_tag "Search", :name => nil %>
          </p>
        <% end %>

      </div>

      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">

            <table class="table table-striped table-condensed-padding">
              <tbody>
                <tr>
                  <th>
                    Round 
                  </th>
                  <th>
                    Pick 
                  </th>
                  <th>
                    Name
                  </th>
                  <th>
                    Position 
                  </th>
                </tr>
                <% @orders.each do |order| %>
                  <tr>
                    <td>
                      <%= order.round %>
                    </td>
                    <td>
                      <%= order.pick %>
                    </td>
                    <td>
                      <%= order.ownership.player.name %>
                    </td>       
                    <td>
                      <%= order.ownership.player.position %>
                    </td>       
                  </tr>
                <% end %>
              </tbody>
            </table>

          </div>
        </div>
      </div>   
    </div><!-- panel -->
     
  </div>
</div>       
