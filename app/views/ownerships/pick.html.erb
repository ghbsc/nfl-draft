<div class="container">
  <div class="row">
    <h1>Latest 3 Picks & Next Team to Pick</h1>
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">

            <table class="table table-striped table-condensed-padding">
              <tbody>
                <tr>
                  <th>
                    Round 
                  </th>
                  <th>
                    Pick 
                  </th>
                  <th>
                    Team 
                  </th>
                  <th>
                    Player 
                  </th>
                  <th>
                    Position 
                  </th>
                </tr>
                <% @ownerships.each do |ownership| %>
                  <tr>
                    <td>
                      <%= ownership.order.round %>
                    </td>
                    <td>
                      <%= ownership.order.pick %>
                    </td>       
                    <td>
                      <%= ownership.team.name %>
                    </td>       
                    <td>
                      <%= ownership.player.name %>
                    </td>       
                    <td>
                      <%= ownership.player.position %>
                    </td>       
                  </tr>
                <% end %>
              </tbody>
            </table>
            
            <p>
              <%= label_tag 'next_team', 'Next Team Up:' %>
              <%= @order && @order.team_name || 'End of Draft' %>
            </p>
          </div>
        </div>
      </div>   
    </div><!-- panel -->
     
  </div>
</div>       
