<div class="container">
  <div class="row">
    <h1>Draftable Players</h1>
    <div class="panel panel-default">
      <div class="panel-heading">
 
        <%= form_tag players_path, :method => 'get' do %>
          <p>
            <%= label_tag :position, 'Position' %>
            <%= select_tag(:position, options_for_select(Player.distinct.pluck(:position), params[:position]), prompt: 'all') %>
            <%= submit_tag "Search", :name => nil %>
          </p>
        <% end %>
 
      </div>

      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
 
            <table class="table table-striped table-condensed-padding">
              <tbody>
                <tr>
                  <th>
                    Name
                  </th>
                  <th>
                    Position  
                  </th>
                </tr>
                <% @players.each do |player| %>
                  <tr>
                    <td>
                      <%= player.name %>
                    </td>
                    <td>
                      <%= player.position %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
 
          </div>
        </div>
      </div>   
    </div><!-- panel -->
     
  </div>
</div>       
